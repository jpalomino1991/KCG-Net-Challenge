
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Codigo Pedido</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Precio Total</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var pedido in Model)
        {
        <tr>
            <td>@pedido.Codigo</td>
            <td>@pedido.Fecha</td>
            <td>@pedido.CodigoCliente</td>
            <td>@pedido.PrecioTotal</td>
        </tr>
        }
            
    </tbody>
</table>

<a class="btn btn-info" role="button" asp-action="Nuevo">Nuevo Pedido</a>